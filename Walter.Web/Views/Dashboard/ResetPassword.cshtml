@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="login-box">
    <!-- /.login-logo -->
    <div class="card card-outline card-primary">
        <div class="card-header text-center">
            <a href="" class="h1"><b>Admin</b>LTE</a>
        </div>
        <div class="card-body">
            <p class="login-box-msg">Sign in to walter.</p>
            @if (ViewBag.AuthError != null)
            {
                <span class="text-danger">@ViewBag.AuthError</span>
            }
            <form asp-action="ResetPasswordData" method="post">
                <div class="input-group mb-3">
                    <input type="hidden" required name="email" value="@ViewBag.Email">
                    <input type="hidden" required name="token" value="@ViewBag.Token">

                    <input type="password" required name="password" class="form-control" placeholder="Password">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input type="password" required name="confirmPassword" class="form-control" placeholder="Confirm Password">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="row">           
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">Send</button>
                    </div>
                    <!-- /.col -->
                    <div class="col-8">
                        <p class="mb-1">
                            <a asp-action="SignIn">SignIn</a>
                        </p>
                    </div>
                    <!-- /.col -->
                </div>
            </form>

           
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>
<!-- /.login-box -->
